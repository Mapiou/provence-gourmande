<% content_for :title, "Recettes" %>

<div class="container">
  <div class="page-header">
    <h1>Les recettes proven√ßales</h1>
  </div>

  <div class="recipes-search">
    <%= form_tag recipes_path, method: :get, class: "form-inline" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Ex : Bouillabaisse"
      %>
      <%= submit_tag 'Rechercher', class: 'btn btn-success' %>
    <% end %>
  </div>

  <div>
    <%= link_to "Ajouter une recette", new_recipe_path %>
  </div>

  <div class="row">
    <% @recipes.each do |recipe| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= recipe.photo.present? ? recipe.photo : image_url('recipe.jpg') %>); background-size: cover;">
              <%= link_to "", recipe_path(recipe), class: "card-link" %>
              <div class="card-category">
                <p></p>
              </div>
              <div class="card-desc">
                <h2><%= recipe.name %></h2>
                <p><%= recipe.description[0..50] + '...' %></p>
              </div>
            </div>
            <div class="card-footer">
              <div class="card-date">
                <p><%= recipe.difficulty %></p>
              </div>
              <div class="card-links">
                <ul>
                  <li><a href="#"><i class="fas fa-star"></i></a></li>
                  <li><a href="#"><i class="fas fa-heart"></i></a></li>
                  <li><a href="#"><i class="fas fa-share"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>

  <div id="btn-to-up">
    <a href="#"><i class="fas fa-caret-square-up"></i></a>
  </div>
</div>
