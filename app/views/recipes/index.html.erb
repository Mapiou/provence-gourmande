<% content_for :title, "Recettes" %>

<div class="container">
  <h1>Les recettes provençales</h1>
  <p>Venez découvrir les meilleurs recettes de notre région</p>
  <%= link_to "Ajouter une recette", new_recipe_path %>

  <% @recipes.each do |recipe| %>
    <div>
      <h2><%= link_to recipe.name, recipe_path(recipe) %></h2>
      <p><%= recipe.description %></p>
      <%= image_tag recipe.photo, alt: recipe.name, width: 200 %>
    </div>
  <% end %>
</div>
