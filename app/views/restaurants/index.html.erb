<h1>Restaurant#index</h1>
<p>Find me in app/views/restaurant/index.html.erb</p>

<div class = "container">
  <%= form_tag restaurants_path, method: :get do %>
    <div class = "row input_searches">
      <%= text_field_tag :name,
      params[:name],
      class: "form-control",
      placeholder: "Restaurant"
      %>
      <%= submit_tag "Rechercher",  class: "btn-green btn_barre_recherche" %>
    </div>
  <% end %>
</div>
